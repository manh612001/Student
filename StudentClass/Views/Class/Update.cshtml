@model StudentClass.Application.ViewModels.ClassViewModel.ClassDetail
@{
    ViewData["Title"] = "Update";
    Layout = "_layout";

}
<div class="container ">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-chevron p-3 bg-body-tertiary rounded-3">
            <li class="breadcrumb-item">
                <a class="link-body-emphasis" asp-action="Index" asp-controller="Home">
                    <i class="fa-solid fa-house"></i>
                    <span class="visually-hidden">Home</span>
                </a>
            </li>
            <li class="breadcrumb-item">
                <a class="link-body-emphasis fw-semibold text-decoration-none" asp-controller="Class" asp-action="Index">Class List</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Edit
            </li>
        </ol>
    </nav>
</div>
<div class="box w-50 ">
    <form class="w-40" method="post" asp-action="Update">
        <div class="text-center">
            <h2 class="pb-10" id="formEdit">Edit</h2>
        </div>
        <input type="hidden" value="@Model.Id"/>
        <div class="form-group">
            <label asp-for="Name" class="w-40" >Name</label>
            <input type="text" class="form-control" asp-for="Name" id="ClassName" data-name="@Model.Name">
            <span asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <label>Student</label>
            
            <select class="form-control js-example-basic-multiple" multiple="multiple" data-ids="@Model.StudentIds" id="states" asp-for="StudentIds" style="width:100%;">
                @if(Model.Students != null)
                {
                    foreach (var item in Model.Students)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                }
            </select>
        </div>
        <input type="hidden" asp-for="Id" />
        <div class="mt-2 d-flex justify-content-between ">
            <div><a asp-action="Index" asp-controller="Class"><i class="fa-solid fa-arrow-left"></i> Back to Class list</a></div>
            <button class="btn btn-sec " id="btnSave" type="submit">Save</button>
        </div>
    </form>
</div>
