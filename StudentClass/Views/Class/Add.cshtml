@model StudentClass.Application.ViewModels.ClassViewModel.CreateClass
@{
    ViewData["Title"] = "Add Class";
    Layout = "_layout";
}
<div class="container ">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-chevron p-3 bg-body-tertiary rounded-3">
            <li class="breadcrumb-item">
                <a class="link-body-emphasis" asp-action="Index" asp-controller="Home">
                    <i class="fa-solid fa-house"></i>
            <span class="visually-hidden">Home</span>
                </a>
            </li>
            <li class="breadcrumb-item">
                <a class="link-body-emphasis fw-semibold text-decoration-none" asp-controller="Class" asp-action="Index">Class List</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Add
            </li>
        </ol>
    </nav>
</div>
<div class="box w-50 ">
    <form class="w-40" method="post" asp-action="Add" id="form-addClass">
        <div class="text-center">
            <h2 class="pb-10">Add</h2>
        </div>
        
        <div class="form-group">
            <label asp-for="Name" class="w-40">Name:<span style="color:red;">*</span></label>
            <input type="text" class="form-control" asp-for="Name" id="ClassName">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group multi">
            <label>Student:<span style="color:red;">*</span></label>
            <select class="form-control js-example-basic-multiple" multiple="multiple" id="states" asp-for="StudentIds" style="width:100%;">
                @if(Model.Students != null)
                {
                    foreach (var item in Model.Students)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="StudentIds" class="text-danger"></span>
        </div>

        <div class="mt-2 d-flex justify-content-between">
            <div><a asp-action="Index" asp-controller="Class"><i class="fa-solid fa-arrow-left"></i> Back to Class list</a></div>
            <button class="btn btn-sec " id="btnSave">Save</button>
        </div>
    </form>
</div>
