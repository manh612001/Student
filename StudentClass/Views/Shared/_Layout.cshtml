@{
    var alertType = "";
    if (TempData["msg"] != null)
    {
        alertType = TempData["msg"].ToString().Split("!")[0];
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentClass.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/jquery.dataTables.css">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary bg-gradient border-bottom box-shadow mb-3 d-flex justify-content-around" style="--bs-bg-opacity: .75;">
            <div class="navbar-brand text-white"><span id="navbr-brand">Student</span></div>

            <div>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Index" asp-controller="Student">Student List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Index" asp-controller="Class">Class List</a>
                    </li>
                    @if(User.Identity?.Name != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbardrop" data-bs-toggle="dropdown">
                                @User.Identity.Name
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="Account" asp-action="Detail" asp-route-name="@User.Identity.Name">Profile</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-action="LogOut" asp-controller="Account">LogOut</a>
                            </div>
                        </li>
                    }

                </ul>

            </div>
        </nav>
    </header>
    <div class="container">
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-@alertType">
                @TempData["msg"]
            </div>
        }
        @RenderBody()

    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - StudentClass - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.13.3/js/jquery.dataTables.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.1/jquery.validate.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
